{
  "cleanUrls": true,
  "trailingSlash": false,
  "rewrites": [
    { "source": "/", "destination": "/client/src/index.html" },
    { "source": "/(.*)", "destination": "/client/src/$1" }
  ],
  "headers": [
    {
      "source": "/client/src/(.*)",
      "headers": [
        { "key": "Access-Control-Allow-Origin", "value": "*" },
        { "key": "Access-Control-Allow-Methods", "value": "GET, POST, OPTIONS" },
        { "key": "Cache-Control", "value": "public, max-age=3600" }
      ]
    }
  ]
}
